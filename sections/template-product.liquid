<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="{{ product.featured_image | image_url: width: 900}}" alt="{{ product.featured_image.alt }}" class="img-fluid" width="{{ product.featured_image.width }}" height="{{ product.featured_image.height }}" loading="lazy">
            </div>
            <div class="col-md-6">
                <h1>{{ product.title }}</h1>
                <span class="fw-bold">{{ product.price | money }}</span>
                <div class="mt-3">
                    {{ product.content }}
                </div>
                <div>
                    {% form 'product', product %}
                        <input type="hidden" value="{{ product.selected_or_first_available_variant.id }}">
                        <select name="id">
                            {% for variant in product.variants %}
                                <option value="{{ variant.id }}">
                                    {{ variant.title }}
                                </option>
                            {% endfor %}
                        </select>
                        <button type="submit" class="btn btn-primary">Add to cart</button>
                    {% endform %}
                </div>
            </div>
        </div>
        </div>
</section>
