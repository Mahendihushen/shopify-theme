<section class="py-5" id="{{ section.id }}">
    <div class="container">
        <div class="row">
            <h1>Cart</h1>
            {%- if cart.empty? -%}
                <p>Cart is Empty!</p>
                {%- else -%}
                {%- form 'cart', cart -%}
                    {% for item in cart.items %}
                        <div class="d-flex gap-3 align-items-center mt-3">
                            <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.image.alt }}" width="120" height="120" loading="lazy">
                            <h3>{{ item.title }}</h3>
                            <p>{{ item.price | money }}</p>
                            <input type="text" name="updates[]" value="{{ item.quantity }}">
                            <p>{{ item.final_line_price | money }}</p>
                            <a href="{{ item.url_to_remove }}">Remove</a>
                        </div>
                    {% endfor %}
                    <div class="cart-action mt-4">
                        <p>Total Item : {{ cart.item_count }} </p>
                        <p>Total: {{ cart.total_price | money }}</p>
                        <button type="submit" name="update" class="btn btn-secondary ">Update</button>
                        <button type="submit" name="checkout" class="btn btn-primary">Checkout</button>
                    </div>
                {%- endform -%}
            {%- endif -%}
        </div>
    </div>
</section>

